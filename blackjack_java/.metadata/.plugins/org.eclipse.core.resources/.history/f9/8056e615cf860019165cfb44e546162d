package gui;

import org.eclipse.swt.widgets.MessageBox;
import org.eclipse.swt.widgets.Shell;

public class GameState {
	boolean win_state = false;
	public GameState(){	
	}
	
	public boolean checkBust(int points) {
		if (points > 21) {
			win_state = false;
			return true;	
		}
		else {
			win_state = true;
			return false;
		}
		
	}
	
